<div  class="container">
<h1><%= @restaurant.name %></h1>
<hr>
  <p><%=  @restaurant.address %></p>
  <p><%=  @restaurant.phone_number %></p>
  <p><%=  @restaurant.category.capitalize %></p>
  <p>
   <small> <%= link_to "Go back to restaurants", restaurants_path %></small>
  </p>
  <%= link_to "Leave a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
  <hr>
<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> | Rating: <%= "⭐️" * review.rating %></li>
  <% end %>
</ul>
<br>
</div>
